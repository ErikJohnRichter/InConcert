@model inConcert.Models.Project
@using inConcert.Models;

<span>Partial Display</span>
<div class="container">
    <div class="container col-xs-8">
        <div class="row">
            <div >
                <div>
                    @foreach (Calendar calendar in Model.calendars)
                    {
                        @Html.Partial("Calendar", calendar)
                    }
                </div>
            </div>
            <div class="col-md-4">

            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                @Html.Partial("ChatRoom", Model.chat);
            </div>
        </div>
    </div>
    <div class="container col-xs-4">
        <div class="row">
            <div class="col-md-6" id="notificationsTable">
                @{Html.RenderAction("NotificationView");}
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/Scripts/jquery-2.1.4.min.js"></script>
<script type="text/javascript">
    var url = '@Url.Action("NotificationView")';
    var notifications = $("#notificationsTable");
    setInterval(function () {
        notifications.load(url);
    }, 2000);
</script>
